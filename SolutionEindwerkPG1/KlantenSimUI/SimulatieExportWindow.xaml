<Window x:Class="KlantenSim_UI_WPF.SimulatieExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlantenSim_UI_WPF"
        mc:Ignorable="d"
        Title="SimulatieExportWindow" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Selecteer Exportwijze:" Grid.Row="0" Grid.Column="0" Margin="10"/>
        <ComboBox x:Name="cbExportType" SelectionChanged="cbExportType_SelectionChanged" Grid.Row="0" Grid.Column="1" Margin="10">
            <ComboBoxItem Content="1 Tekstbestand (Data + Info)"/>
            <ComboBoxItem Content="2 Tekstbestanden (Gescheiden)"/>
            <ComboBoxItem Content="JSON Bestand"/>
        </ComboBox>

        <TextBlock Text="Kies een separator:" Grid.Row="1" Grid.Column="0" Margin="10"/>
        <ComboBox x:Name="cbSeparator" Grid.Row="1" Grid.Column="1" Margin="10">
            <ComboBoxItem Content="Puntkomma (;)" Tag=";"/>
            <ComboBoxItem Content="Komma (,)" Tag=","/>
            <ComboBoxItem Content="Tab" Tag="&#x09;"/>
            <ComboBoxItem Content="Pipe (|)" Tag="|"/>
        </ComboBox>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="1" Content="..." Padding="10,2,10,2" Margin="0,10,10,10" Click="btnBrowse_Click"/>
            <TextBox x:Name="txtExportPad" Grid.Row="0" Grid.Column="0" Text="" IsReadOnly="False" Margin="10"/>

        </Grid>
        <Button Grid.Row="3" Grid.ColumnSpan="2" x:Name="btnExport" Content="Exporteer" Click="btnExport_Click" Margin="10" Cursor="Hand"/>
    </Grid>
    
</Window>
