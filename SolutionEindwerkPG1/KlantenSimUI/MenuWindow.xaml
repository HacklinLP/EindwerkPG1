<Window x:Class="KlantenSim_UI_WPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlantenSim_UI_WPF"
        mc:Ignorable="d"
        Title="KlantenSimulator" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="DimGray"  BorderThickness="2" Padding="0" Margin="5" >
            <TextBlock Text="Kies een optie" FontWeight="Medium" FontSize="20" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Margin="0,5,0,5" HorizontalAlignment="Center"/>
        </Border>
        <Border BorderBrush="DimGray" BorderThickness="2" Padding="0" Margin="5" Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Button Content="Simulatie Maken" Click="btnSimMaken_Click" Grid.Row="0" Grid.Column="0" Margin="15" />
                <Button Content="Simulatie Bekijken" Click="btnSimBekijken_Click" Grid.Row="1" Grid.Column="0" Margin="15"/>
                <Button Content="Exit" Click="btnExit_Click" Grid.Row="2" Grid.Column="0" Padding="10" Margin="15"/>
            </Grid>
        </Border>



    </Grid>
</Window>
