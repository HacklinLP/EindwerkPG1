<Window x:Class="KlantenSimUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlantenSimUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Simulator" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" FontSize="30" HorizontalAlignment="Center"/>
        
        <TextBlock Text="Keuze Land:" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="(optioneel) Specifieke Gemeente:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <DataGrid Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Aantal Klantensimulaties:" Grid.Row="3" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Opdrachtgever:" Grid.Row="4" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- Leeftijden -->
        <TextBlock Text="Leeftijden" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        <TextBlock Text="Minimum Leeftijd:" Grid.Row="6" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5"/>
        <TextBlock Text="Maximum Leeftijd:" Grid.Row="7" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="5"/>

        <!-- Huisnummer -->
        <TextBlock Text="Huisnummerdefinities" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        <TextBlock Text="Max Nummer:" Grid.Row="9" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="9" Grid.Column="1" Margin="5"/>
        
        <TextBlock Text="Aantal Met Letter (%):" Grid.Row="10" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="10" Grid.Column="1" Margin="5"/>
        <!-- Simuleer knop-->
        <Button Content="Simuleer" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Padding="30,5,30,5" HorizontalAlignment="Center" FontSize="15"/>
    </Grid>
</Window>
