<Window x:Class="KlantenSimUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlantenSimUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Simulator" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" FontSize="30" HorizontalAlignment="Center"/>
        
        <TextBlock Text="Keuze Land:" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <ComboBox x:Name="cbLanden" SelectionChanged="cbLanden_SelectionChanged" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="(optioneel) Specifieke Gemeente:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <ListBox x:Name="lbGemeentes" Grid.Row="2" Grid.Column="1" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{Binding Naam}" VerticalAlignment="Center" Width="150" Tag="{Binding}" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
                        <Label Content=" %: " VerticalAlignment="Center"/>
                        <TextBox Width="40" Margin="5,0" Text="0" LostFocus="TextBox_Percentage_LostFocus" Tag="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="Aantal Klantensimulaties:" Grid.Row="3" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtAantalKlanten" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Opdrachtgever:" Grid.Row="4" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtOpdrachtgever" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- Leeftijden -->
        <TextBlock Text="Leeftijden" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        <TextBlock Text="Minimum Leeftijd:" Grid.Row="6" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtMinLeeftijd" Grid.Row="6" Grid.Column="1" Margin="5"/>
        <TextBlock Text="Maximum Leeftijd:" Grid.Row="7" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtMaxLeeftijd" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <!-- Huisnummer -->
        <TextBlock Text="Huisnummerdefinities" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        <TextBlock Text="Max Nummer:" Grid.Row="9" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtMaxHuisnummer" Grid.Row="9" Grid.Column="1" Margin="5"/>
        
        <TextBlock Text="Aantal Met Letter (%):" Grid.Row="10" Grid.Column="0" Margin="5" HorizontalAlignment="Right"/>
        <TextBox x:Name="txtPercentageLetter" Grid.Row="10" Grid.Column="1" Margin="5"/>
        <!-- Simuleer knop-->
        <Button Content="Simuleer" Click="btnSimuleer_Click" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Padding="30,5,30,5" HorizontalAlignment="Center" FontSize="15"/>
    </Grid>
</Window>
